generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String?
  email     String?   @unique
  password  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Budget    Budget[]
  Expense   Expense[]
}

model Budget {
  id        String   @id @default(cuid())
  amount    Float
  month     Int
  year      Int
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, month, year])
}

model Expense {
  id          String   @id @default(cuid())
  amount      Float
  category    String?
  description String?
  date        DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Optional: Link expense to a specific budget period if needed later
  // budgetId    String l?
  // budget      Budget?   @relation(fields: [budgetId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
